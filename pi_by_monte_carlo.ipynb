   "source": [
    "import numpy as np\n",
    "import random\n",
    "\n",
    "m, n = 0, 1000000\n",
    "\n",
    "for i in range(n):\n",
    "    x, y = random.uniform(-1, 1), random.uniform(-1, 1)\n",
    "    if x**2 + y**2 <= 1:\n",
    "        m += 1\n",
    "\n",
    "print(m/n*4)\n"
   ]
